rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // votesコレクションのルール
    match /votes/{document} {
      // 認証済みユーザーは読み取り可能
      allow read: if request.auth != null;
      // 認証済みユーザーは自分の投票のみ書き込み可能
      allow write: if request.auth != null && request.auth.uid == document;
    }
  }
}